<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_height"
    android:layout_margin="@dimen/margin_list_item"
    android:elevation="@dimen/cardview_elevation">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="center_vertical"
        android:drawableStart="@drawable/blue_square"
        android:drawableEnd="@drawable/ic_chevron_right_black_48dp"
        android:drawablePadding="@dimen/cardview_padding_text"
        android:gravity="center_vertical"
        android:text="@string/item_name_text"/>

</android.support.v7.widget.CardView>