<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_margin="5dp"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item.image.color"
            android:layout_width="@dimen/img_size"
            android:layout_height="@dimen/img_size"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/img_padding"
            android:background="@color/img_backround"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@+id/item.image.arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/img_right_margin"
            android:src="@drawable/ic_arrow_right_black_36dp"/>

        <TextView
            android:id="@+id/item.title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item.image.color"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@+id/item.image.arrow"
            android:layout_toEndOf="@+id/item.image.color"
            android:gravity="start|center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            tools:text="SOME TEXT" />

    </RelativeLayout>
</android.support.v7.widget.CardView>