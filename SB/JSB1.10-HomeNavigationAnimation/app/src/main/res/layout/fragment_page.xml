<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fr.page.view"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/fr.page.next"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fr.page.prev"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/fr_main_btn_next_text"/>

    <Button
        android:id="@+id/fr.page.prev"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fr.page.next"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:text="@string/fr_main_btn_prev_text"/>

    <TextView
        android:id="@+id/fr.page.number"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:text="@string/fr_main_number_text"/>

</android.support.constraint.ConstraintLayout>