<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.androidtutorialstorage.MainActivity">

    <LinearLayout
        android:id="@+id/view_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/view_copy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onCopyButtonClick"
            android:text="Copy"
            tools:ignore="HardcodedText"/>

        <Button
            android:id="@+id/view_show_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onShowButtonClick"
            android:text="Show"
            tools:ignore="HardcodedText"/>
    </LinearLayout>


    <ImageView
        android:id="@+id/view_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/view_buttons"
        tools:ignore="ContentDescription"/>

    <ProgressBar
        android:id="@+id/view_progress"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"/>

</RelativeLayout>
