<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_padding"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/main.btn.first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/main.btn.second"
        android:text="@string/main_btn_xml_text"/>

    <Button
        android:id="@+id/main.btn.second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/main_btn_code_text"/>

    <View
        android:id="@+id/main.view.first"
        android:layout_width="@dimen/main_code_size"
        android:layout_height="@dimen/main_code_size"
        android:background="#ff008000" />

    <View
        android:id="@+id/main.view.second"
        android:layout_width="@dimen/main_code_size"
        android:layout_height="@dimen/main_code_size"
        android:layout_below="@id/main.view.first"
        android:background="#ff008080" />

</RelativeLayout>
