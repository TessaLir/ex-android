<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/page.picture"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:elevation="@dimen/page_image_elevation"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/page_text_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FF555555"
            android:textSize="42sp"
            style="?android:textAppearanceLarge"
            tools:text="SOME PLACE"/>

        <TextView
            android:id="@+id/page_text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="?android:textAppearanceMedium"
            tools:text="SOME PLACE"/>

        <TextView
            android:id="@+id/page_text_placeold"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@android:color/holo_red_light"
            android:textSize="52sp"
            style="?android:textAppearanceLarge"
            tools:text="SOME PLACE"/>

        <TextView
            android:id="@+id/page_text_placenew"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FF555555"
            android:textSize="52sp"
            style="?android:textAppearanceLarge"
            tools:text="SOME PLACE"/>

    </LinearLayout>
</LinearLayout>